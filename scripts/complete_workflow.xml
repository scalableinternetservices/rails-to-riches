<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/local/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice">
    <clients>
        <client host="localhost" use_controller_vm="true" />
    </clients>

    <servers>
        <server host="rails-to-riches.eba-viwn7vp8.us-west-2.elasticbeanstalk.com" port="80"
            type="tcp" />
    </servers>

    <load>
        <!-- Define combined load phases based on all workflows -->
        <arrivalphase phase="1" duration="60" unit="second">
            <users arrivalrate="1" unit="second" />
        </arrivalphase>
        <arrivalphase phase="2" duration="60" unit="second">
            <users arrivalrate="2" unit="second" />
        </arrivalphase>
        <arrivalphase phase="3" duration="60" unit="second">
            <users arrivalrate="4" unit="second" />
        </arrivalphase>
        <arrivalphase phase="4" duration="60" unit="second">
            <users arrivalrate="8" unit="second" />
        </arrivalphase>
        <arrivalphase phase="5" duration="60" unit="second">
            <users arrivalrate="16" unit="second" />
        </arrivalphase>
        <arrivalphase phase="6" duration="60" unit="second">
            <users arrivalrate="32" unit="second" />
        </arrivalphase>
        <arrivalphase phase="7" duration="60" unit="second">
            <users arrivalrate="64" unit="second" />
        </arrivalphase>
    </load>

    <sessions>
        <!-- 1. Signup Test -->
        <session name="signup_test" probability="10" type="ts_http">
            <!-- User Signup -->
            <request subst="true">
                <dyn_variable name="jwt" re='\"jwt\":\"([^\"]+)\"' />
                <http url="/api/signup" method="POST" contents_from_file="./signup_unique.json">
                    <http_header name="Content-Type" value="application/json" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- Access Dashboard -->
            <request subst="true">
                <http url="/api/restaurants_paged?page=1&amp;per_page=10" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- Browse Restaurants' Primary Photos -->
            <for var="restaurant_id" from="1" to="15" incr="1">
                <request subst="true">
                    <http url="/api/restaurants/%%_restaurant_id%%/primary_photo" method="GET">
                        <http_header name="Authorization" value="Bearer %%_jwt%%" />
                    </http>
                </request>
            </for>
        </session>

        <!-- 2. Login Home -->
        <session name="login_home" probability="15" type="ts_http">
            <!-- User Login -->
            <request subst="true">
                <dyn_variable name="jwt" re='\"jwt\":\"([^\"]+)\"' />
                <http url="/api/login" method="POST" contents_from_file="./login_unique.json">
                    <http_header name="Content-Type" value="application/json" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- Access Dashboard -->
            <request>
                <http url="/api/restaurants_paged?page=1&amp;per_page=10" method="GET">
                </http>
            </request>

            <for var="restaurant_id" from="1" to="10" incr="1">
                <request subst="true">
                    <http url="/api/restaurants/%%_restaurant_id%%/primary_photo" method="GET">
                    </http>
                </request>
            </for>
        </session>

        <!-- 3. Manage Restaurant Profile -->
        <session name="manage_restaurant_profile" probability="20" type="ts_http">
            <!-- Business Owner Login -->
            <request subst="true">
                <dyn_variable name="jwt" re='\"jwt\":\"([^\"]+)\"' />
                <http url="/api/login" method="POST" contents_from_file="./login.json">
                    <http_header name="Content-Type" value="application/json" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- View All Restaurants -->
            <request subst="true">
                <http url="/api/restaurants" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- Browse Restaurants' Primary Photos -->
            <for var="restaurant_id" from="1" to="15" incr="1">
                <request subst="true">
                    <http url="/api/restaurants/%%_restaurant_id%%/primary_photo" method="GET">
                        <http_header name="Authorization" value="Bearer %%_jwt%%" />
                    </http>
                </request>
            </for>

            <!-- Create a New Restaurant -->
            <request subst="true">
                <dyn_variable name="id" re='\"id\":([0-9]+)' />
                <http url="/api/restaurants" method="POST"
                    contents_from_file="./create_restaurant.json">
                    <http_header name="Content-Type" value="application/json" />
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- View Specific Restaurant Details -->
            <request subst="true">
                <http url="/api/restaurants/%%_id%%" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- Update Restaurant Information -->
            <request subst="true">
                <http url="/api/restaurants/%%_id%%" method="PUT"
                    contents_from_file="./update_restaurant.json">
                    <http_header name="Content-Type" value="application/json" />
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- Add Dishes to the Restaurant -->
            <request subst="true">
                <http url="/api/restaurants/%%_id%%/dishes" method="POST"
                    contents_from_file="./add_dish.json">
                    <http_header name="Content-Type" value="application/json" />
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />
        </session>

        <!-- 4. Browse Restaurants -->
        <session name="browse_restaurants" probability="20" type="ts_http">
            <!-- Access Dashboard -->
            <request subst="true">
                <http url="/api/restaurants" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- Browse Restaurants' Primary Photos -->
            <for var="restaurant_id" from="1" to="15" incr="1">
                <request subst="true">
                    <http url="/api/restaurants/%%_restaurant_id%%/primary_photo" method="GET" />
                </request>
            </for>

            <!-- Loop over known restaurant IDs -->
            <for var="restaurant_id" from="1" to="250" incr="1">

                <!-- View Specific Restaurant Details -->
                <transaction name="restaurant_profile">
                    <request subst="true">
                        <http url="/api/restaurants/%%_restaurant_id%%" method="GET">
                        </http>
                    </request>
                    <!-- View Dishes for the Restaurant -->
                    <request subst="true">
                        <http url="/api/restaurants/%%_restaurant_id%%/dishes" method="GET">
                        </http>
                    </request>
                    <!-- View Reviews and comments for the Restaurant -->
                    <request subst="true">
                        <http
                            url="/api/restaurants/%%_restaurant_id%%/reviews_paged?page=1&amp;per_page=100"
                            method="GET">
                        </http>
                    </request>
                    <!-- View Photos for the Restaurant -->
                    <request subst="true">
                        <http url="/api/restaurants/%%_restaurant_id%%/photos" method="GET">
                        </http>
                    </request>
                </transaction>

                <thinktime value="1" />
            </for>
        </session>

        <!-- 5. Add Reviews -->
        <session name="add_reviews" probability="20" type="ts_http">
            <!-- User Login -->
            <request subst="true">
                <dyn_variable name="jwt" re='\"jwt\":\"([^\"]+)\"' />
                <http url="/api/login" method="POST" contents_from_file="./login.json">
                    <http_header name="Content-Type" value="application/json" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- View Specific Restaurant Details -->
            <request subst="true">
                <http url="/api/restaurants/1" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- View Dishes for the Restaurant -->
            <request subst="true">
                <http url="/api/restaurants/1/dishes" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>

            <!-- View Photos for the Restaurant -->
            <request subst="true">
                <http url="/api/restaurants/1/photos" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- View Reviews for the Restaurant -->
            <request subst="true">
                <http url="/api/restaurants/1/reviews" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>

            <!-- View Comments for a Specific Review -->
            <for var="review_id" from="1" to="3" incr="1">
                <request subst="true">
                    <http url="/api/restaurants/1/reviews/%%_review_id%%/comments" method="GET">
                        <http_header name="Authorization" value="Bearer %%_jwt%%" />
                    </http>
                </request>
            </for>
            <thinktime value="1" />

            <!-- Submit a Review -->
            <request subst="true">
                <http url="/api/restaurants/1/reviews" method="POST"
                    contents_from_file="./review.json">
                    <http_header name="Content-Type" value="application/json" />
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />
        </session>

        <!-- 6. Photo Gallery Browsing and Uploading -->
        <session name="photo_gallery_browsing_and_uploading" probability="15" type="ts_http">
            <!-- User Login -->
            <request subst="true">
                <dyn_variable name="jwt" re='\"jwt\":\"([^\"]+)\"' />
                <http url="/api/login" method="POST" contents_from_file="./login.json">
                    <http_header name="Content-Type" value="application/json" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- View Specific Restaurant Details -->
            <request subst="true">
                <http url="/api/restaurants/1" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- View Dishes for the Restaurant -->
            <request subst="true">
                <http url="/api/restaurants/1/dishes" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>

            <!-- View Photos for the Restaurant -->
            <request subst="true">
                <http url="/api/restaurants/1/photos" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- View Reviews for the Restaurant -->
            <request subst="true">
                <http url="/api/restaurants/1/reviews" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>

            <!-- View Comments for a Specific Review -->
            <for var="review_id" from="1" to="3" incr="1">
                <request subst="true">
                    <http url="/api/restaurants/1/reviews/%%_review_id%%/comments" method="GET">
                        <http_header name="Authorization" value="Bearer %%_jwt%%" />
                    </http>
                </request>
            </for>
            <thinktime value="1" />

            <!-- Upload a New Photo -->
            <request subst="all_except_body">
                <http url="/api/restaurants/1/photos" method="POST"
                    contents_from_file="./photo_form.bin">
                    <http_header name="Content-Type"
                        value="multipart/form-data; boundary=----WebKitFormBoundary7MA4YWxkTrZu0gW" />
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />

            <!-- View Updated Photo Gallery -->
            <request subst="true">
                <http url="/api/restaurants/1/photos" method="GET">
                    <http_header name="Authorization" value="Bearer %%_jwt%%" />
                </http>
            </request>
            <thinktime value="1" />
        </session>
    </sessions>
</tsung>